{% extends 'base.html.twig' %}

{% block title %}Assigment{% endblock %}

{% block body %}
        <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-4xl mx-auto">
            <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg border border-gray-200 mb-6">
                <div class="text-green-600">
                    <a href="{{ path('app_assigment_index') }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path stroke-dasharray="20" stroke-dashoffset="20" d="M21 12h-17.5"><animate fill="freeze" attributeName="stroke-dashoffset" dur="0.2s" values="20;0"/></path><path stroke-dasharray="12" stroke-dashoffset="12" d="M3 12l7 7M3 12l7 -7"><animate fill="freeze" attributeName="stroke-dashoffset" begin="0.2s" dur="0.2s" values="12;0"/></path></g></svg>
                    </a>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-700">Assigment</p>
                    <p class="text-xs text-gray-500">Description of assigment</p>
                </div>

            </div>


            <div class="mt-6 bg-gray-50 p-4 rounded-lg border border-gray-200">
                <h2 class="text-lg font-semibold text-gray-700">Title:</h2>
                <p class="text-gray-900 mb-4">{{ assigment.title }}</p>

                <h2 class="text-lg font-semibold text-gray-700">Date:</h2>
                <p class="text-gray-900 mb-4">{{ assigment.date|date('Y-m-d H:i') }}</p>

            </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-4xl mx-auto  mt-10">
            <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg border border-gray-200 mb-6">
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-700">Galleries</p>
                    <p class="text-xs text-gray-500">Poniżej znajdują się galerie.</p>
                </div>
                <div class="text-green-600">
                    <a href="{{ path('app_gallery_new', {'guid': assigment.guid}) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" viewBox="0 0 24 24"><path fill="currentColor" d="M19 12.998h-6v6h-2v-6H5v-2h6v-6h2v6h6z"/></svg>
                    </a>
                </div>
            </div>

            <table class="min-w-full border-collapse border border-gray-200 text-sm text-gray-600">
                <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left font-semibold border-b border-gray-200">Name</th>
                    <th class="px-6 py-3 text-left font-semibold border-b border-gray-200">Actions</th>

                </tr>
                </thead>
                <tbody>
                {% for gallery in galleries %}
                    <tr>
                        <td class="px-6 py-4 border-b border-gray-200">{{ gallery.name }}</td>
{#                        <td class="px-6 py-4 border-b border-gray-200">{{ assigment.date ? assigment.date|date('Y-m-d H:i:s') : '' }}</td>#}
                        <td class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                            <a href="{{ path('app_gallery_show', {'id': gallery.id}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" viewBox="0 0 24 24"><path fill="currentColor" d="M12 9a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3m0 8a5 5 0 0 1-5-5a5 5 0 0 1 5-5a5 5 0 0 1 5 5a5 5 0 0 1-5 5m0-12.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5"/></svg>
                            </a>
                            <a href="{{ path('app_gallery_edit', {'id': gallery.id}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="1.5  em" height="1.5em" viewBox="0 0 24 24"><path fill="currentColor" d="M20.71 7.04c.39-.39.39-1.04 0-1.41l-2.34-2.34c-.37-.39-1.02-.39-1.41 0l-1.84 1.83l3.75 3.75M3 17.25V21h3.75L17.81 9.93l-3.75-3.75z"/></svg>
                            </a>
                            {{ include('gallery/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

{% endblock %}
