{% extends 'base.html.twig' %}

{% block title %}Edit Gallery{% endblock %}

{% block body %}
    <div class="flex-1 bg-gray-100 flex items-center justify-center">
        <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-4xl mx-auto">
            <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg border border-gray-200 mb-6">
                <div class="text-green-600">
                    <a href="{{ path('app_assigment_index') }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path stroke-dasharray="20" stroke-dashoffset="20" d="M21 12h-17.5"><animate fill="freeze" attributeName="stroke-dashoffset" dur="0.2s" values="20;0"/></path><path stroke-dasharray="12" stroke-dashoffset="12" d="M3 12l7 7M3 12l7 -7"><animate fill="freeze" attributeName="stroke-dashoffset" begin="0.2s" dur="0.2s" values="12;0"/></path></g></svg>
                    </a>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-700">Gallery for Assigment</p>
                    <p class="text-xs text-gray-500">Edit gallery</p>
                </div>

            </div>


            <div class="mt-6 bg-gray-50 p-4 rounded-lg border border-gray-200">

                {#            <p class="text-sm font-semibold text-gray-600"></p>#}
                {{ form_start(form, {'attr': {'class': 'mt-4 space-y-4'}}) }}
                <form class="mt-4 space-y-4">
                    <div>
                        <label for="title" class="block text-sm font-medium text-gray-700">Name</label>
                        {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm'} } ) }}
                    </div>

                    {{ form_widget(form.submit, {'attr': {'class': 'w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2'},  'label': 'assigment.form.submit_new'  } ) }}

                    {{ form_end(form) }}
            </div>
        </div>
    </div>
{#    {{ include('gallery/_delete_form.html.twig') }}#}
{% endblock %}
